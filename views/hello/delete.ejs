    </header>
    <div role="main">
        <p>
            <%= content%>
        </p>
        <table class="table">
            <tr>
                <th>name</th>
                <td>
                    <%= mydata.name%>
                </td>
            </tr>
            <tr>
                <th>mail</th>
                <td>
                    <%= mydata.mail%>
                </td>
            </tr>
            <tr>
                <th>age</th>
                <td>
                    <%= mydata.age%>
                </td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr>
        </table>

        <form action="/hello/delete" method="post">
            <input type="hidden" name="id" value="<%= mydata.id%>">
            <input type="submit" value="削除" class="btn btn-primary">
        </form>
    </div>
</body>

</html>